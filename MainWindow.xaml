        <Label x:Name="lbTaskErr" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="260,385,0,0" VerticalAlignment="Top" Width="255" Grid.ColumnSpan="2" Height="26" Foreground="Red"/>
